{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Default",
  "compilerOptions": {
    "incremental": false,
    "target": "ES2022",
    "lib": [
      "es2022",
      "DOM",
      "DOM.Iterable"
    ],
    "moduleDetection": "force",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "strict": true,
    "noImplicitAny": false,
    "noUncheckedIndexedAccess": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "packages/*/src"
  ]
}
